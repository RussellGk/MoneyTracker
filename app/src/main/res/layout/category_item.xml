<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view_cat="http://schemas.android.com/apk/res-auto"
    android:id="@+id/category_list_one"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_height"
    android:padding="@dimen/card_layout_margin"
    card_view_cat:cardBackgroundColor="@color/white"
    card_view_cat:cardCornerRadius="@dimen/card_corner_radius">
    <RelativeLayout style ="@style/Category">
        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/list_name"
            android:textSize="@dimen/list_text"/>
    </RelativeLayout>
    <View
        android:id="@+id/selected_overlay_category"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selected_color"
        android:visibility="invisible"/>
</android.support.v7.widget.CardView>